#!/bin/bash





# install packages
##################

# install packages from official repo
echo -e "\nInstalling packages from official repo\n"
sleep 2
sudo apt install dconf-cli flatpak guake kde-standard kodi lightdm qbittorrent vlc
echo -e "\nDone\n"
sleep 2

# install flatpaks
echo -e "\nInstalling flatpaks\n"
sleep 2
sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
flatpak install com.github.Eloston.UngoogledChromium
echo -e "\nDone\n"
sleep 2

# install nordvpn
echo -e "\nInstalling NordVPN\n"
sleep 2
sh <(curl -sSf https://downloads.nordcdn.com/apps/linux/install.sh)
usermod -aG nordvpn pi
echo -e "\nDone\n"
sleep 2





# import personal files
echo -e "\nImporting personal files\n"
sleep 2
git clone https://github.com/ksanf3/personal
mkdir /home/pi/Desktop
cp /home/pi/personal/pi/1-pi-packages /home/pi/Desktop
cp /home/pi/personal/pi/2-pi-config /home/pi/Desktop
echo -e "\nDone\n"
sleep 2





# show final instructions
echo -e "\n\n\n\n\n\n\n\n\n\nFinal Instructions\n"
echo -e "\nrun the command \"sudo raspi-config\"\n"
echo -e "\nenable boot to desktop through \"System Options\"\n"
